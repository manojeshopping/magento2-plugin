<?xml version="1.0"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/springbot/main/attribute-set/:id/" method="GET">
        <service class="Springbot\Main\Api\AttributeSetInterface" method="getAttributeSetById"/>
        <resources>
            <resource ref="Springbot_Main::main"/>
        </resources>
    </route>
    <route url="/V1/springbot/main/attribute-set/list" method="GET">
        <service class="Springbot\Main\Api\AttributeSetInterface" method="getAttributeSets"/>
        <resources>
            <resource ref="Springbot_Main::main"/>
        </resources>
    </route>
</routes>
